@model MvcPhotoOps.Models.ViewModels.EventIndexViewModel

@{
    ViewBag.Title = "Event - Index";
}

<h2>Events</h2>
<table class="table table-striped table-bordered" >
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Events)   
        {
            <tr>
                <td>@item.EventId</td>
                <td>@item.Name</td>
                <td>@item.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

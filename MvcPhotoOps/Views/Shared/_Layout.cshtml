<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/modern.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/modern-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/prettify.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/js/bootstrap-carousel.js")" type="text/javascript"></script>
</head>
<body class="metrouicss" onload="prettyPrint()">
    <div class="container-narrow container-fluid">
        <div class="masthead">
            <div class="muted" style="text-align: center">
                <img src="@Url.Content("~/Content/bootstrap/img/miniLogo.png")" alt="photo-ops"/></div>
        </div>
        <hr />
        <div class="subnav subnav-fixed">
            <form class="well" style="text-align: center" action>
                <div class="input-control text">
                    <input type="text" placeholder="Enter the name of your event"/>
                <div class="input-control text">
                    <input type="text" placeholder="Enter your bib number"/>
                </div>
            <button class="standart" type="submit">Find</button>
            </form>
        </div>

        <div id="myCarousel" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="item">
                    <img src="@Url.Content("~/Content/images/ColorManilaOne.jpg")" alt="color manila" />
                    <div class="container">
                        <div class="carousel-caption">
                            <h4>Color Manila Nite Run</h4>
                            <p>
                                Enjoy the start of the year with rocking music, awesome crowd, and fit body. Get
                                your friends and family stretched out and ready for this a very colourful event.
                                Be part of the Color Manila Nite Run 2013!</p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/images/ColorManilaTwo.jpg")" alt="color manila" />
                    <div class="container">
                        <div class="carousel-caption">
                            <h4>Color Manila Nite Run</h4>
                            <p>
                                This event is part of the Color Manila Fun Run series. The first parts was held
                                also in BGC last January 6, 2013 and it was the most colourful event ever held in
                                Manila. In the tradition of colors, for Color Manila Nite Run everyone will glow
                                and flicker in the dark.</p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/images/ColorManilaThree.jpg")" alt="color manila" />
                    <div class="container">
                        <div class="carousel-caption">
                            <h4>Color Manila Nite Run</h4>
                              <p>Our goal is for runners to see BGC in a different light; that's the reason why we have 
                              created a route that will pass-through 26th and 30th so our runners will see the unique landmarks of BGC. 
                              When runners cross the finishline, they will feel the party-like atmosphere with our ligt set-up 
                              and line-up of bands.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <hr />
    <div class="row-fluid">
        <div class="tabbable tabs-right page-sidebar">
            <ul class="nav nav-tabs">
                <li><a href="#rA" data-toggle="tab">My Order</a></li>
                <li><a href="#rB" data-toggle="tab">Customer Services</a></li>
                <li><a href="#rC" data-toggle="tab">FAQ</a></li>
                <li><a href="#rD" data-toggle="tab">Race Directors</a></li>
                <li><a href="#rE" data-toggle="tab">Join Our Team</a></li>
            </ul>            
            <div class="tab-content">
                <div class="tab-pane" id="rA">
                    <form class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label" for="inputEmail">Email</label>
                            <div class="controls">
                                <input type="email" id="inputEmail" placeholder="Enter your email here"/>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="inputPassword">Password</label>
                            <div class="controls">
                                <input type="password" id="inputPassword" placeholder="Enter your password here"/>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <button class="btn" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane" id="rB">
                </div>
                <div class="tab-pane" id="rC">
                </div>
                <div class="tab-pane" id="rD">
                </div>
                <div class="tab-pane" id="rE">
                </div>                
            </div>
        </div>
    </div>
    <section id="main">
        @RenderBody()
    </section>
    <footer>
    </footer>
    </div>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-latest.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/js/bootstrap.js")" type="text/javascript"></script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/js/jquery.mousewheel.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/moment.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/moment_langs.js")"></script>

    <script type="text/javascript" src="@Url.Content("~/Scripts/js/dropdown.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/accordion.js")"</script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/buttonset.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/carousel.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/input-control.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/pagecontrol.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/rating.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/slider.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/tile-slider.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/tile-drag.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/js/calendar.js")"></script>
    <script>
        !function ($) {
            $(function () {
                $('#myCarousel').carousel()
            })
        } (window.jQuery)
    </script>
</body>
</html>
